<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.skolonetapp.Activity.HomeScreen">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar_sales"></include>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="37dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnCloseLead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Close Leads"
            android:background="@color/colorPrimaryLight"
            tools:ignore="NotSibling" />


        <Button
            android:id="@+id/btnTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_below="@id/btnCloseLead"
            android:layout_margin="4dp"
            android:text="Task Details"
            android:background="@color/colorPrimaryLight"
            tools:ignore="NotSibling" />

        <Button
            android:id="@+id/btnSales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTask"
            android:background="@color/colorPrimaryLight"
            android:layout_margin="4dp"
            android:text="Sales Details"
            tools:ignore="NotSibling" />

        <Button
            android:id="@+id/btnComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSales"
            android:layout_margin="4dp"

            android:background="@color/colorPrimaryLight"
            android:text="Comments"
            tools:ignore="NotSibling" />


    </RelativeLayout>


</RelativeLayout>
